    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run vite",
            "runtimeExecutable": "vite",
            "cwd": "${workspaceFolder}",
            "args": [],
            "console": "internalConsole"
        },
        {
            "name": "Run django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py",
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "Start Dev Environment",
            "configurations": [
                "Launch edge",
                "Run django",
                "Run vite"
            ]
        }
    ]
}